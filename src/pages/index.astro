---
import Layout from '../layouts/Layout.astro'
import Home from '../components/Home.astro'
import Works from '../components/Works.astro'
import MoreWorks from '../components/MoreWorks.astro'
import Contact from '../components/Contact.astro'
---

<Layout title='Daniel Prieto Gaviria | Frontend Developer | DPG-Code'>
  <Home />
  <Works />
  <MoreWorks />
  <Contact />
</Layout>

<style is:global>
  :root {
    --font-size-sm: clamp(0.8rem, 0.17vw + 0.76rem, 0.89rem);
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-md: clamp(1.25rem, 0.61vw + 1.1rem, 1.58rem);
    --font-size-lg: clamp(1.56rem, 1vw + 1.31rem, 2.11rem);
    --font-size-xl: clamp(1.95rem, 1.56vw + 1.56rem, 2.81rem);
    --font-size-xxl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
    --font-size-xxxl: clamp(3.05rem, 3.54vw + 2.17rem, 5rem);
    --left-glow: linear-gradient(
      to bottom right,
      rgba(243, 211, 53, 0),
      rgba(243, 211, 53, 0),
      rgba(243, 211, 53, 0.3)
    );
    --right-glow: radial-gradient(
      rgba(243, 211, 53, 0.3),
      rgba(243, 211, 53, 0)
    );
  }

  #title-home:after,
  #title-contact::before,
  #title-home:before,
  #title-contact::after {
    content: '';
    left: 50%;
    position: absolute;
    filter: blur(45px);
    transform: translateZ(0);
  }
  #title-home:before,
  #title-contact::before {
    background: var(--left-glow);
    border-radius: 50%;
    width: 480px;
    height: 360px;
    margin-left: -400px;
  }
  #title-home:after,
  #title-contact::after {
    background: var(--right-glow);
    width: 240px;
    height: 180px;
    z-index: -1;
  }

  #title-home {
    font-size: var(--font-size-xl);
  }
  #description-home {
    font-size: var(--font-size-base);
  }

  .titleEffect {
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #0d0d0d5c;
  }

  .circle_contact-1 {
    width: 220px;
    height: 220px;
    border: 0.9em solid #f3d335;
    border-radius: 100%;
    position: absolute;
  }

  @media only screen and (max-width: 600px) {
    #title-home:after,
    #title-contact::before,
    #title-home:before,
    #title-contact::after {
      left: 0;
    }
  }

  @media only screen and (min-width: 640px) {
    .circle_contact-1 {
      width: 320px;
      height: 320px;
      border: 1.3em solid #f3d335;
    }
  }

  @media only screen and (min-width: 1024px) {
    #title-home {
      font-size: var(--font-size-xxl);
    }
  }

  @media only screen and (min-width: 1536px) {
    #title-home {
      font-size: var(--font-size-xxxl);
    }
    #description-home {
      font-size: var(--font-size-md);
    }

    .circle_contact-1 {
      width: 460px;
      height: 460px;
      border: 1.7em solid #f3d335;
    }
  }
</style>
