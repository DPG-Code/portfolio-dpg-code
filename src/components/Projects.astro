---
import ProjectsCard from '@/components/ProjectsCard.astro'
---

<section
  id='projects'
  class='py-12 px-6 flex flex-col gap-12 xl:gap-20 sm:px-12 xl:px-36 xl:pt-36 xl:pb-20 2xl:px-56'
>
  <div class='w-full h-[1px] bg-neutral-800'></div>
  <header class='flex items-center justify-start gap-4 xl:gap-6'>
    <div class='dot-title'></div>
    <h2 class='w-full z-40 font-semibold text-lg text-neutral-400 2xl:text-2xl'>
      PROJECTS
    </h2>
  </header>
  <ProjectsCard />
</section>

<style is:global>
  .dot-title {
    width: 12px;
    height: 12px;
    background-color: #ffffff;
    border-radius: 50%;
    box-shadow: 0 0 20px #ffffff;
  }

  .tooltip {
    position: relative;
  }
  .tooltip .tooltiptext {
    margin-top: -76px;
    visibility: hidden;
    padding: 4px 12px;
    background-color: #0d0d0d;
    color: #ffffff;
    text-align: center;
    font-weight: 400;
    font-style: italic;
    border-radius: 6px;
    position: absolute;
    z-index: 1;
  }
  .tooltip:hover .tooltiptext {
    visibility: visible;
  }

  .titleEffect {
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #ffffff1c;
  }

  .glare {
    z-index: 1;
    height: 1px;
    background-image: linear-gradient(
      to right,
      rgba(0, 0, 0, 0) 5%,
      rgba(255, 255, 255, 0.3) 35%,
      rgba(255, 255, 255, 0.7) 50%,
      rgba(255, 255, 255, 0.3) 65%,
      rgba(0, 0, 0, 0) 95%
    );
    position: absolute;
    top: 0%;
    bottom: auto;
    left: 0%;
    right: 0%;
  }

  .icon-work svg {
    position: relative;
    transition: all 0.2s ease-in-out;
  }
  .icon-work:hover svg {
    transform: translateX(6px);
  }

  @media (width >= 1024px) {
    .tooltip .tooltiptext {
      margin-top: -108px;
      padding: 6px 16px;
      font-size: 1.1em;
    }
  }
  @media (width >= 1280px) {
    .dot-title {
      width: 14px;
      height: 14px;
    }
  }
  @media (width >= 1536px) {
    .tooltip .tooltiptext {
      margin-top: -136px;
    }
  }
</style>
