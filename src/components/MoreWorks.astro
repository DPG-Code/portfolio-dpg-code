---
import { Image } from 'astro:assets'
import { moreWorks } from '../consts'
---

<article
  class='px-6 flex flex-col items-center justify-center pt-16 sm:px-16 lg:px-24 2xl:px-36'
>
  <h2
    class='my-16 w-full z-40 font-bold text-center text-3xl text-[#FFFFFF] lg:my-24 lg:text-5xl 2xl:text-7xl'
  >
    More Works
    <span class='text-[#f3d335]'>.</span>
  </h2>
  <section
    class='w-full grid grid-cols-1 gap-10 sm:grid-cols-3 xl:grid-cols-4 xl:gap-16'
  >
    {
      moreWorks.map((project) => (
        <a
          href={project.url}
          target='_blank'
          class='card-moreworks w-full h-auto flex flex-col items-center justify-start gap-4   sm:items-start   lg:gap-6'
        >
          <Image
            class='w-full max-w-[240px] h-auto rounded-xl   sm:max-w-xs'
            width='320'
            height='180'
            src={project.picture}
            alt={project.title}
          />
          <h3 class='font-normal text-xl text-[#FFFFFF]   lg:text-2xl   2xl:text-3xl'>
            {project.title}
          </h3>
          <div class='flex flex-wrap gap-2   lg:gap-x-3'>
            {project.tech.map((tech) => (
              <p class='px-3 py-1 rounded-full text-[10px] font-light border border-neutral-700 text-neutral-400   lg:text-xs'>
                {tech}
              </p>
            ))}
          </div>
        </a>
      ))
    }
  </section>
</article>
