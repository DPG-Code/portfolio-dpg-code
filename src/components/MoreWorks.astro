---
import { Image } from 'astro:assets'
import { moreWorks } from '../consts'
---

<article
  class='px-6 flex flex-col items-center justify-center pt-16 sm:px-16 lg:px-24 2xl:px-36'
>
  <h2
    class='my-16 w-full z-40 font-bold text-center text-3xl text-[#FFFFFF] lg:my-24 lg:text-5xl 2xl:text-7xl'
  >
    More Works<span class='text-[#f3d335]'>.</span>
  </h2>
  <section
    class='w-full grid grid-cols-1 gap-10 sm:grid-cols-3 xl:grid-cols-4 xl:gap-16'
  >
    {
      moreWorks.map((project) => (
        <div class='w-full h-auto flex'>
          <a
            href={project.url}
            target='_blank'
            class='card-moreworks m-auto w-full max-w-[240px] flex relative overflow-hidden rounded-xl   sm:max-w-xs'
          >
            <div class='w-full h-full backdrop-blur-lg bg-[#0d0d0d]/75 grid place-content-center absolute opacity-0 hover:opacity-100 transition-opacity duration-500'>
              <h3 class='font-extrabold text-xl text-white   lg:text-2xl   2xl:text-3xl'>
                {project.title.toUpperCase()}
              </h3>
            </div>
            <Image
              class='m-auto w-full max-w-[240px] h-auto rounded-xl   sm:max-w-xs'
              width='320'
              height='180'
              src={project.picture}
              alt={project.title}
            />
          </a>
        </div>
      ))
    }
  </section>
</article>
